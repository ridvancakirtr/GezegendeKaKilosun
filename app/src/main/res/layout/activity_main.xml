<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:fontFamily="sans-serif-condensed"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gezegenKacKilosun"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_height="45dp"
            android:hint="@string/dunyadaki_kilo"
            android:inputType="numberDecimal"
            android:width="20dp"
            android:ems="12"
            android:id="@+id/type"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_width="269dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
            android:id="@+id/tvsonuc"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="30dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/type"/>
    <CheckBox
            android:text="mars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxMars" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/checkBoxVenus" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/type"
            app:layout_constraintHorizontal_bias="0.443" app:layout_constraintVertical_bias="0.278"/>
    <CheckBox
            android:text="@string/venus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxVenus" app:layout_constraintEnd_toStartOf="@+id/checkBoxJubiter"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/type" app:layout_constraintVertical_bias="0.3"/>
    <CheckBox
            android:text="Jubiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxJubiter" android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/type"
            app:layout_constraintVertical_bias="0.278"/>
    <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:id="@+id/imageView" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="paren t"
            android:src="@drawable/maxresdefault"
            android:layout_marginStart="28dp"/>

</android.support.constraint.ConstraintLayout>